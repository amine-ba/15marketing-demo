// prettier-ignore
{
  "compilerOptions": {
    "target": "esnext",                                 
    "lib": ["es2017"],                                  
    "jsx": "react-native",                               
    "module": "commonjs",                                              
    "moduleResolution": "node",                       
    "baseUrl": "./",
    "paths": {
      "@hooks/*": ["./src/hooks/*"],
      "@screens/*": ["./src/screens/*"],
      "@components/*": ["./src/components/*"],
      "@shared/*": ["./src/shared/*"],
      "@assets/*": ["./src/assets/*"],
      "@utils/*": ["./src/utils/*"],
      "@consts/*": ["./src/consts/*"],
    }       ,         
    "resolveJsonModule": true,                        
    "allowJs": true,                                  
    "noEmit": true,                                   
    "isolatedModules": true,                             
    "allowSyntheticDefaultImports": true,             
    "esModuleInterop": true,                                   
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                    
    "skipLibCheck": true                          
  },
  "exclude": [
    "node_modules", "babel.config.js", "metro.config.js", "jest.config.js"
  ]
}
